@{
    ViewData["Title"] = "Inicio - Gestión de Mantenimiento";
}

<div class="container mt-5">
    <!-- Título de Bienvenida -->
    <div class="text-center">
        <h1 class="display-4 font-weight-bold text-primary">Bienvenido a Gestión de Mantenimiento</h1>
        <p class="lead text-secondary">Optimiza la gestión de equipos, tareas y mantenimiento en tu empresa.</p>
    </div>

    <!-- Sección de Descripción y Servicios -->
    <div class="row mt-5">
        <!-- Gestión de Equipos -->
        <div class="col-md-4 text-center">
            <img src="Img/1.jpg" alt="Gestión de Equipos" class="img-fluid mb-3" style="height: 200px; object-fit: cover;">
            <h3 class="h5 font-weight-bold text-dark">Gestión de Equipos</h3>
            <p class="text-muted">Administra y organiza el inventario de equipos, clasificándolos por categorías y estados.</p>
        </div>

        <!-- Gestión de Mantenimiento -->
        <div class="col-md-4 text-center">
            <img src="Img/2.jpg" alt="Gestión de Mantenimiento" class="img-fluid mb-3" style="height: 200px; object-fit: cover;">
            <h3 class="h5 font-weight-bold text-dark">Gestión de Mantenimiento</h3>
            <p class="text-muted">Programa tareas de mantenimiento, asigna personal y realiza seguimiento de cada actividad.</p>
        </div>

        <!-- Historial y Reportes -->
        <div class="col-md-4 text-center">
            <img src="Img/3.jpg" alt="Historial y Reportes" class="img-fluid mb-3" style="height: 200px; object-fit: cover;">
            <h3 class="h5 font-weight-bold text-dark">Historial y Reportes</h3>
            <p class="text-muted">Consulta el historial de mantenimiento y genera reportes detallados por equipo o fecha.</p>
        </div>
    </div>

    <!-- Botón de Llamado a la Acción -->
    <div class="text-center mt-5">
        <a href="/Account/Login" class="btn btn-primary btn-lg px-4 py-2">Comienza Ahora</a>
    </div>

    <!-- Sección de Características Principales -->
    <div class="row mt-5 bg-light p-4 rounded">
        <div class="col-md-6">
            <h4 class="font-weight-bold text-primary">Características Principales</h4>
            <ul class="list-unstyled">
                <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Gestión integral de equipos y tareas</li>
                <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Seguimiento en tiempo real de tareas</li>
                <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Notificaciones y alertas de mantenimiento</li>
                <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Reportes detallados y exportables</li>
            </ul>
        </div>
        <div class="col-md-6 text-center">
            <img src="Img/4.jpg" alt="Características" class="img-fluid mb-3" style="height: 200px; object-fit: cover;">
        </div>
    </div>
</div>

<!-- Estilos CSS adicionales -->
<style>
    .container {
        max-width: 1200px;
    }

    .text-primary {
        color: #007bff;
    }

    .text-secondary {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .bg-light {
        background-color: #f8f9fa;
    }
</style>

